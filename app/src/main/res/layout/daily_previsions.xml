<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/layout_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >

    <include
        layout="@layout/header"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        />

    <LinearLayout
        android:id="@+id/day_one_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_toolbar"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/day_one_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Lun"
            android:textSize="20dp"
            />

        <include
            layout="@layout/daily"
            android:id="@+id/day_one_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/day_two_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/day_one_layout"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"

        >

        <TextView
            android:id="@+id/day_two_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Mar"
            android:textSize="20dp"
            />

        <include
            layout="@layout/daily"
            android:id="@+id/day_two_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/day_three_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/day_two_layout"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"

        >

        <TextView
            android:id="@+id/day_three_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Mer"
            android:textSize="20dp"
            />

        <include
            layout="@layout/daily"
            android:id="@+id/day_three_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/day_four_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/day_three_layout"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/day_four_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Jeu"
            android:textSize="20dp"
            />

        <include
            layout="@layout/daily"
            android:id="@+id/day_four_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/day_five_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/day_four_layout"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"

        >

        <TextView
            android:id="@+id/day_five_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Ven"
            android:textSize="20dp"
            />

        <include
            layout="@layout/daily"
            android:id="@+id/day_five_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/day_six_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/day_five_layout"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"

        >

        <TextView
            android:id="@+id/day_six_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Sam"
            android:textSize="20dp"
            />

        <include
            layout="@layout/daily"
            android:id="@+id/day_six_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/day_seven_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/day_six_layout"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/day_seven_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Dim"
            android:textSize="20dp"
            />

        <include
            layout="@layout/daily"
            android:id="@+id/day_seven_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </LinearLayout>
    </LinearLayout>



    <include
        layout="@layout/loader"
        android:id="@+id/loader_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        />


</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>